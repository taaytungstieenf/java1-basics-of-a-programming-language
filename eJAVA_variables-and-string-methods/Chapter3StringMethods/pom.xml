                </manifest>
              </archive>
              <descriptorRefs>
                <descriptorRef>jar-with-dependencies</descriptorRef>
              </descriptorRefs>
            </configuration>
          </execution>

          <execution>
            <id>make-jar-uppercaseandlowercase</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
